            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"candidat_id\": 1,\n  \"concours_id\": 1,\n  \"session_id\": 1,\n  \"centre_depot_id\": 1,\n  \"date_enrolement\": \"2026-01-16\",\n  \"statut_enrolement\": \"en_attente\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/enrolements",
              "host": ["{{base_url}}"],
              "path": ["enrolements"]
            }
          }
        },
        {
          "name": "Télécharger fiche PDF",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/enrolements/1/download-fiche",
              "host": ["{{base_url}}"],
              "path": ["enrolements", "1", "download-fiche"]
            }
          }
        }
      ]
    },
    {
      "name": "Paiements",
      "item": [
