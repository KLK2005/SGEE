              "host": ["{{base_url}}"],
              "path": ["paiements", "1", "validate"]
            }
          }
        },
        {
          "name": "Télécharger quitus PDF",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/paiements/1/download-quitus",
              "host": ["{{base_url}}"],
              "path": ["paiements", "1", "download-quitus"]
            }
          }
        }
      ]
    },
    {
